DLGTEMPLATE DLG_ASCII PRELOAD MOVEABLE DISCARDABLE
BEGIN
    DIALOG  "ASCII Table", DLG_ASCII, 8, 4, 240, 144, NOT FS_DLGBORDER |
            FS_SIZEBORDER | WS_VISIBLE, FCF_SYSMENU | FCF_TITLEBAR |
            FCF_MINMAX | FCF_TASKLIST
    BEGIN
        VALUESET        SET_ASCII, 6, 4, 230, 60, VS_TEXT | VS_BORDER |
                        WS_GROUP
                        CTLDATA 8, 0, 8, 32
        MLE             "", MLE_TEXT, 6, 82, 230, 50, MLS_WORDWRAP |
                        MLS_HSCROLL | MLS_VSCROLL | WS_GROUP
        LTEXT           "0", ST_FONT, 6, 68, 230, 8
    END
END


                        NOT WS_TABSTOP
        PUSHBUTTON      "~Help", PB_DIRECTTYPE_HELP, 111, 6, 40, 14, BS_HELP |
                        NOT WS_TABSTOP
        LTEXT           "Select Program for Direct Type", ST_DIRECTTYPE, 6,
                        66, 104, 8
    END
END


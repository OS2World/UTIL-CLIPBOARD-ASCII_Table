        LISTBOX         LB_PROGRAMS, 6, 6, 99, 62, LS_HORZSCROLL | WS_GROUP
        DEFPUSHBUTTON   "~Ok", PB_DIRECTTYPE_OK, 111, 50, 40, 14, WS_GROUP
